<div class="container">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <% if @member == current_member %>
        <h3><strong>マイページ</strong></h3>
      <% else %>
        <h3><strong><%= @member.nickname %>さんのページ</strong></h3>
      <% end %>
    </div>
  </div>

  <div class="row mb-4">

    <div class="col-3">
      <div class="card">

      <div>
        <% if @member.profile_image.attached? %>
          <%= image_tag @member.profile_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>

      <div>ニックネーム：<%= @member.nickname %></div>
      <div>
        <%= Date.today.strftime("%Y%m%d").to_i/10000 - @member.year_of_birth.to_i %>歳
      </div>
      <div>
        自己紹介<br>
        <%= @member.self_introduction %>
      </div>

      <div>
        <%= link_to "編集する", edit_member_path(current_member.id) %>
      </div>

      </div>
    </div>


    <div class="col-9">
      <!--本人の時のみ表示する本の検索フォーム及び検討リスト-->
      <%= render 'public/members/upper-part', member: @member,consideration_count: @consideration_count,candidate_posts: @candidate_posts %>
      <!--当会員が投稿したレビューの一覧-->
      <%= render 'public/members/review-part', reviews: @reviews %>
    </div>

  </div>
</div>