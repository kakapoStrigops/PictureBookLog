<div class="container">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <% if @member == current_member %>
        <h3><strong>マイページ</strong></h3>
      <% else %>
        <h3><strong><%= @member.nickname %>さんのページ</strong></h3>
      <% end %>
    </div>
  </div>

  <div class="row mb-4">

    <div class="col-3">
      <div class="card">

      <div>
        <% if @member.profile_image.attached? %>
          <%= image_tag @member.profile_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </div>

      <div>ニックネーム：<%= @member.nickname %></div>
      <div>
        <%= Date.today.strftime("%Y%m%d").to_i/10000 - @member.year_of_birth.to_i %>歳
      </div>
      <div>
        自己紹介<br>
        <%= @member.self_introduction %>
      </div>

      <div>
        <%= link_to "編集する", edit_member_path(current_member.id) %>
      </div>

      </div>
    </div>



    <div class="col-9">
      <% if @member == current_member %>
        <h5>■絵本を探す</h5>
        <%= render 'public/books/search-form' %>
        <h5 class="mt-4">■検討リスト（購入検討<%=  @consideration_count %>件中<%= @candidate_posts.count %>件を表示）</h5>
        <%= render 'public/candidate_posts/index', candidate_posts: @candidate_posts %>
        <h6>
          <%= link_to "全ての検討ステータスを確認する", candidate_posts_path, class: "btn btn-outline-secondary btn-sm mt-2" %>
        </h6>


      <% end %>

      <h5 class="mt-4">■レビュー（<%= @reviews.count %>件）</h5>
      <div class="card">
        <ul class="list-group list-group-flush">
          <% @reviews.each do |review| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-2">
                <div class="card-body">
                  <div class="card-title">
                  <%= link_to (image_tag(review.book_image_url)), review.rakuten_books_url %>
                  </div>

                </div>
              </div>

              <div class="col-10">
                <div class="card-header bg-transparent">
                  <div class="row">
                    <div class="col-7">
                      <h5 class="card-title"><strong><%= review.title %></strong></h5>
                    </div>
                    <div class="col-5 mt-2">
                      <h6 class="card-subtitle">作者：<%= review.author %></h6>
                    </div>



                  </div>

                </div>

                <div class="card-body">
                  <p class="card-text"><%= review.review %></p>
              ジャンル：
                <% review.genre_tags.each do |genre_tag| %>
                  <%= genre_tag.genre %>
                <% end %>
              <br>
              対象年齢：
                <% review.target_age_tags.each do |target_age_tag| %>
                  <%= target_age_tag.target_age %>
                <% end %>
                <br>
                  （<%= l review.updated_at %>）
                  <%= link_to "詳細", review_path(review.id), class: "btn btn-outline-success" %>
                </div>
              </div>
            </div>
          </li>
          <% end %>

        </ul>
      </div>


    </div>

  </div>
</div>