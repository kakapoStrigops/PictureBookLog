<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div class="col-6 mx-auto">

      <div class="card shadow mb-5">
        <div class="card-header">
          <h3><strong>ログイン</strong></h3>
        </div>
        <div class="card-body">
        <%= form_with model: @member, url: member_session_path do |f| %>
          <%= f.label :email, "メールアドレス", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4" %>
          <%= f.label :password, "パスワード", class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-4" %>
          <%= f.submit "ログイン", class: "btn btn-success" %>
        <% end %>
        </div>
      </div>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>