<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div class="col-6 mx-auto">

      <div class="card shadow mb-5">
        <div class="card-header">
          <h3><strong>新規会員登録</strong></h3>
        </div>
        <div class="card-body">

        <%= form_with model: @member, url: member_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-4" %>
          <%= f.label :name_kana, "フリガナ", class: "form-label" %>
          <%= f.text_field :name_kana, autocomplete: "name_kana", class: "form-control mb-4" %>
          <%= f.label :nickname, "ニックネーム", class: "form-label" %>
          <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control mb-4" %>
          <%= f.label :year_of_birth, "生まれ年（西暦、半角4桁）", class: "form-label" %>
          <%= f.text_field :year_of_birth, autocomplete: "year_of_birth", class: "form-control mb-4" %>
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control mb-4" %>
          <%= f.label :password, "パスワード", class: "form-label" %>
          <% if @minimum_password_length %>
          （<%= @minimum_password_length %> 文字以上）
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-4" %>

          <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-4" %>

          <%= f.submit "新規登録", class: "btn btn-success" %>

        <% end %>
        </div>
      </div>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>
