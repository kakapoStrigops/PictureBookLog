<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <h3><strong>みんなのレビュー</strong></h3>
    </div>
  </div>

  <% @reviews.each do |review| %>
  <div class="card mt-4 shadow">
    <div class="card-body">
      <div class="row">

        <div class="col-4">
          <div class="card-body">
            <div class="card-title">
            <%= link_to (image_tag(review.book_image_url)), review.rakuten_books_url %>
            </div>
            <h5 class="card-title"><strong><%= review.title %></strong></h5>
            <%= review.author %>
          </div>
        </div>

        <div class="col-8">
          <div class="card-body">
            <h4 class="card-title">レビュー</h4>
            <p class="card-text"><%= review.review %></p>
          </div>
          <div class="card-footer bg-transparent">
            投稿者：<%= Member.find(review.member_id).nickname %>
            （<%= l review.updated_at %>）
            <%= link_to "詳細を見る", review_path(review.id) %>
          </div>
        </div>

      </div>
    </div>
  </div>
  <% end %>

</div>