<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <h3><strong>会員一覧</strong></h3>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <table class="table table-hover table-inverse col-md-10 col-12 mt-4 mx-auto">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ニックネーム（氏名）</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td>
            <%= link_to admin_member_path(member.id) do %>
              <%= member.nickname %> （<%= member.name %>）
            <% end %>
          </td>
          <td><%= member.email %></td>
          <td>
            <%= member.delete_status_i18n %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination justify-content-center mt-3">
  <%= paginate @members %>
  </div>
</div>