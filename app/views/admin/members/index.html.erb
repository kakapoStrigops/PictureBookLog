<div class="container">
  <div class="row">
    <div class="col-10 mt-5">
<h2>会員一覧</h2>

<table class="table table-hover table-inverse col-10 mt-4 mx-auto">
  <tr>
    <th>会員ID</th>
    <th>氏名（ニックネーム）</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
    <td><%= member.id %></td>
    <td>
      <%= link_to admin_member_path(member.id) do %>
        <%= member.name %> （<%= member.nickname %>）
      <% end %>
    </td>
    <td><%= member.email %></td>
    <td>
      <% if member.delete_status? %>
        退会
      <% else %>
        有効
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
  <div class="row justify-content-start">
    <div class="col-4 mx-auto">
      <%= paginate @members %>
    </div>
  </div>
