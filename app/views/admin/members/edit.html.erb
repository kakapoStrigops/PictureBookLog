<div class="container">
  <div class="row">
    <div class="col-10 mt-5 mx-auto">
      <h2><%= @member.name %>さんの会員情報編集</h2>

    <%= form_with model: @member, url: admin_member_path do |f| %>
      <table class="mt-5" style="border:none;">
          <tr>
            <th>会員ID</th>
            <td><%= @member.id %></td>
          </tr>
          <tr>
            <th>
              <%= f.label :name, "名前" %>
            </th>
            <td>
              <%= f.label :name, "名前" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :name_kana, "フリガナ" %><br />
            </th>
            <td>
              <%= f.text_field :name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <th>
              <%= f.label :nickname, "ニックネーム" %>
            </th>
            <td>
              <%= f.text_field :nickname %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :year_of_birth, "生まれ年" %>
            </th>
            <td>
              <%= f.text_field :year_of_birth %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :email, "メールアドレス" %>
            </th>
            <td>
              <%= f.email_field :email %>
            </td>
          </tr>
            <tr>
            <th>
              <%= f.label :self_introduction, "自己紹介" %>
            </th>
            <td>
              <%= f.text_area :self_introduction %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :profile_image, "プロフィール画像" %>
            </th>
            <td>
              <%= f.file_field :profile_image %>
            </td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :delete_status, false %>
                <%= f.label :delete_status, "有効" %>
              <%= f.radio_button :delete_status, true %>
                <%= f.label :delete_status, "退会" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "変更を保存", class: 'btn btn-success' %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>