<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <h3><strong><%= @member.nickname %> （<%= @member.name %>）さんの詳細</strong></h3>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <div class="row">
        <div class="col-6">
          <table class="table table-hover table-inverse col-10 mt-4 mx-auto">
            <tr>
              <th>会員ID</th>
              <td><%= @member.id %></td>
            </tr>
            <tr>
              <th>名前</th>
              <td><%= @member.name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td><%= @member.name_kana %></td>
            </tr>
            <tr>
              <th>ニックネーム</th>
              <td><%= @member.nickname %></td>
            </tr>
            <tr>
              <th>生まれ年</th>
              <td><%= @member.year_of_birth %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @member.email %></td>
            </tr>
            <tr>
              <th>自己紹介</th>
              <td><%= @member.self_introduction %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <%= @member.delete_status_i18n %>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-6">
          <div class="card-body">
            <h6><strong>プロフィール画像</strong></h6>
            <% if @member.profile_image.attached? %>
              <%= image_tag @member.profile_image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </div>
          <div class="card-body">
            <%= link_to "会員ステータスを変更する",  edit_admin_member_path(@member.id), class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>