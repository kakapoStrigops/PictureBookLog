<div class="container mb-5">

  <div class="row d-flex flex-column justify-content-center my-5">
    <div>
      <h3><strong>レビュー一覧</strong></h3>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-body">
      <table class="table table-hover table-inverse col-10 mt-4 mx-auto">
        <thead>
          <tr>
            <th>No.</th>
            <th>絵本</th>
            <th>レビュー/投稿者</th>
            <th>投稿日時</th>
            <th>公開ステータス</th>
            <th>詳細・編集リンク</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td><%= review.id %></td>
            <td>
              <%= link_to (image_tag(review.book_image_url)), review.rakuten_books_url %><br>
              <%= review.title %>
            </td>
            <td>
              <%= review.review %><br>
              投稿者：
              <%= link_to admin_member_path(review.member_id) do %>
                <%= Member.find(review.member_id).nickname %>
              <% end %>
            </td>
            <td><%= l review.created_at %></td>
            <td><%= review.hidden_status_i18n %></td>
            <td>
              <%= link_to "詳細確認", admin_review_path(review.id) %><br>
              <%= link_to "ステータス管理", edit_admin_review_path(review.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>