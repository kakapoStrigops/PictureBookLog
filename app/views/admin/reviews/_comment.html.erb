<div class="card">
  <ul class="list-group list-group-flush">
    <% review.comments.each do |comment| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-8">
          <div class="card-text"><%= comment.comment %></div>
          （<%= l comment.created_at %>）
        </div>
        <div class="col-2">
          <% if comment.member.profile_image.attached? %>
            <%= image_tag comment.member.profile_image, size: "60x60" %>
          <% else %>
            <%= image_tag 'no_image', size: "60x60" %>
          <% end %>
          <br>
          <%= comment.member.nickname %>
        </div>
        <div class="col-2">
          <%= comment.hidden_status_i18n %>
          <%= link_to "ステータス管理", edit_admin_review_comment_path(comment.review.id, comment.id) %>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>