<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div class="col-xl-6 col-lg-8 col-md-10 col-12 mx-auto">

      <div class="card shadow mb-5">
        <div class="card-header">
          <h5><strong>ジャンルタグ編集</strong></h5>
        </div>
        <div class="card-body">
          <%= form_with model: @genre_tag, url: admin_genre_tag_path do |f| %>
            <%= f.text_field :genre, placeholder: "ジャンル名", autofocus: true, class: "form-control mb-4" %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>