<div class="container mb-5">
  <div class="row d-flex flex-column justify-content-center my-5">
    <div class="card mb-5">
      <div class="card-header">
        <h5><strong>コメントを非公開にする</strong></h5>
      </div>
      <div class="card-body">
        公開ステータス：
        <%= form_with model: @comment, url: admin_review_comment_path(@comment.review_id, @comment.id) do |f| %>
          <%= f.radio_button :hidden_status, "open" %>
            <%= f.label :hidden_status, "公開" %>
          <%= f.radio_button :hidden_status, "hidden" %>
            <%= f.label :hidden_status, "非公開" %>
          <%= f.submit "公開ステータスを変更する", class: 'btn btn-success' %>
        <% end %>
      </div>
      <div class="card-footer bg-transparent">
        <div class="row">
          <div class="col-8">
            <div class="card-body">
              <h4 class="card-title">対象のコメント</h4>
              <p class="card-text"><%= @comment.comment %></p>
            </div>
            <div class="card-footer bg-transparent">
              <div class="row">
                <div class="col-6">
                  投稿者：
                  <%= link_to admin_member_path(@comment.member_id) do %>
                    <%= Member.find(@comment.member_id).nickname %>
                  <% end %>
                  、投稿日時：<%= l @comment.updated_at %>
                </div>
                <div class="col"></div>
                <div class="col-2">
                </div>
              </div>
            </div>
          </div>

          <div class="col-4">
            <div class="card-body">
              <div class="card-title">
              <%= link_to (image_tag(@comment.review.book_image_url)), @comment.review.rakuten_books_url %>
              </div>
              <h5 class="card-title"><strong><%= @comment.review.title %></strong></h5>
              <h6 class="card-subtitle"><%= @comment.review.author %></h6>
              出版社：<%= @comment.review.publisher %>、
              出版日：<%= @comment.review.date_of_publication %>、
              ISBN：<%= @comment.review.isbn_code %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
