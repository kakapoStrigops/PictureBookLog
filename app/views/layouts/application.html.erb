<!DOCTYPE html>
<html>
  <head>
    <title>PictureBookLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/app/assets/stylesheets/application.css">
  </head>

  <body style="background-color: #FFFFEE;", class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <div class="container">
        <div class="row d-flex justify-content-center my-2">
        <%= link_to root_path do %>
          <%= image_tag 'logo_PBL_M.png' %>
        <% end %>
        </div>
        <% if admin_signed_in? %>
          <%= render 'admin/header' %>
        <% else %>
          <%= render 'public/header' %>
        <% end %>
      </div>
    </header>
    <main class="mb-auto">
    <%= notice %>
    <%= yield %>
    </main>
    <footer style="background-color: #EEEEEE;" class="text-center">
      <%= render 'layouts/footer' %>
    </footer>
  </body>
</html>
